<xsd:schema xmlns:ddg="http://org.trade.models/ddg" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://org.trade.models/ddg">

    <xsd:element name="DataDependenceGraph">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element minOccurs="0" maxOccurs="1" name="processors" type="ddg:ProcessorListType"/>
                <xsd:element minOccurs="0" maxOccurs="1" name="dataObjects" type="ddg:DataObjectListType"/>
                <xsd:element minOccurs="0" maxOccurs="1" name="dependenceEdges" type="ddg:DataDependenceEdgeListType"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:complexType abstract="true" name="DependenceNodeType">
    	<xsd:sequence>
    		<xsd:element name="incoming" type="ddg:EdgeListType"
    			maxOccurs="1" minOccurs="1" />
    		<xsd:element name="outgoing" type="ddg:EdgeListType"
    			maxOccurs="1" minOccurs="1" />
    	</xsd:sequence>
    	<xsd:attribute name="identifier" type="xsd:ID" use="required" />
    	<xsd:attribute name="name" type="xsd:string" />    </xsd:complexType>

    <xsd:complexType name="EdgeListType">
        <xsd:sequence>
            <xsd:element name="edge" type="xsd:IDREF" maxOccurs="unbounded" minOccurs="0"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="ProcessorListType">
        <xsd:sequence>
            <xsd:element maxOccurs="unbounded" minOccurs="0" name="processor" type="ddg:ProcessorType"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="ProcessorType">
        <xsd:complexContent>
            <xsd:extension base="ddg:DependenceNodeType">
                <xsd:sequence>
                    <xsd:element name="parent" type="xsd:IDREF" minOccurs="0" maxOccurs="1"/>
                    <xsd:element name="type" type="xsd:string"/>
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>

    <xsd:complexType name="DataDependenceEdgeListType">
        <xsd:sequence>
            <xsd:element maxOccurs="unbounded" minOccurs="0" name="dependenceEdge" type="ddg:DataDependenceEdgeType"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="DataDependenceEdgeType">
    	<xsd:sequence>
    		<xsd:element name="source" type="xsd:IDREF" />
    		<xsd:element name="sourceSelector" type="xsd:string"
    			minOccurs="0" maxOccurs="1" />
    		<xsd:element name="target" type="xsd:IDREF" />
    		<xsd:element name="targetSelector" type="xsd:string"
    			minOccurs="0" maxOccurs="1" />
    	</xsd:sequence>
    	<xsd:attribute name="identifier" type="xsd:ID" use="required" />
    	<xsd:attribute name="name" type="xsd:string" />
    	<xsd:attribute name="type">
    		<xsd:simpleType>
    			<xsd:restriction base="xsd:string">
    				<xsd:enumeration value="VALUE"/>
    				<xsd:enumeration value="REFERENCE"/>
    			</xsd:restriction>
    		</xsd:simpleType>
    	</xsd:attribute>
    </xsd:complexType>

    <xsd:complexType name="DataObjectListType">
        <xsd:sequence>
            <xsd:element maxOccurs="unbounded" minOccurs="0" name="dataObject" type="ddg:DataObjectType"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="DataObjectType">
        <xsd:complexContent>
            <xsd:extension base="ddg:DependenceNodeType">
                <xsd:sequence>
                    <xsd:element name="dataElements" type="ddg:DataElementListType" maxOccurs="1"
                                 minOccurs="0"/>
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>


    <xsd:complexType name="DataElementListType">
        <xsd:sequence>
            <xsd:element name="dataElement" minOccurs="0" maxOccurs="unbounded"
                         type="ddg:DataElementType"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="DataElementType">
        <xsd:complexContent>
            <xsd:extension base="ddg:DependenceNodeType">
                <xsd:sequence>
                	<xsd:element name="type" type="xsd:string"/>
                	<xsd:element name="contentType" type="xsd:string" maxOccurs="1" minOccurs="0"/>
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
</xsd:schema>