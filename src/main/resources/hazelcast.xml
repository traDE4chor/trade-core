<hazelcast
        xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-3.7.xsd"
        xmlns="http://www.hazelcast.com/schema/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <network>
        <join><multicast enabled="true"/></join>
    </network>

    <properties>
        <property name="hazelcast.logging.type">slf4j</property>
    </properties>

    <map name="dataObjects">
        <time-to-live-seconds>4</time-to-live-seconds>
        <indexes>
            <index>identifier</index>
        </indexes>
        <backup-count>1</backup-count>
        <async-backup-count>1</async-backup-count>

        <map-store enabled="true" initial-mode="LAZY">
            <class-name>org.trade.core.persistence.DataObjectStore</class-name>
            <properties>
                <property name="mongo.url">mongodb://localhost:27017</property>
                <property name="mongo.db">tradeDB</property>
                <property name="mongo.collection">dataObjects</property>
            </properties>
        </map-store>
    </map>
</hazelcast>